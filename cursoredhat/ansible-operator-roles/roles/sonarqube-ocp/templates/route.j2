kind: Route
apiVersion: route.openshift.io/v1
metadata:
  name: "{{ _sonarqube_name }}"
  namespace: "{{ _sonarqube_namespace }}"
  labels:
    app: "{{ _sonarqube_name }}"
spec:
  to:
    kind: Service
    name: "{{ _sonarqube_name }}"
{% if _sonarqube_route|d("") != "" %}
  host: "{{ _sonarqube_route }}"
{% endif %}
{% if _sonarqube_ssl|d(False)|bool %}
  tls:
    insecureEdgeTerminationPolicy: Redirect
    termination: edge
{% endif %}
